extends base

//- It will create same element like a function
mixin navItem(link, text, icon, active)
    li(class=`${active ? 'side-nav--active' : ''}`)
        a(href=`${link}`)
            svg 
                use(xlink:href=`/img/icons.svg#icon-${icon}`)
            |   #{text}

block content 
    main.main.main--product
        .user-view 
            nav.user-view__menu
                ul.side-nav 
                    +navItem('#', 'Account', 'settings', true)
                    +navItem('#', 'My orders', 'briefcase')
                    +navItem('#', 'Biling', 'credit-card')

                - if (user.role === 'admin')
                    .admin-nav
                        h5.admin-nav__heading Admin 
                        ul.side-nav 
                            +navItem('#', 'Manage products', 'map')
                            +navItem('#', 'Manage user', 'users')
                            +navItem('#', 'Manage orders', 'users')



            .user-view__content 
                .user-view__form-container 
                    .user-view__heading 
                        h2.heading-secondary.ma-bt-md Your Account  
                        span ðŸ˜Ž

                
                    //- User data
                    .form-user-data
                        .form__group 
                            p.form__label Name
                            .form__input= `${user.name}`
                        .form__group.ma-bt-md
                            p.form__label Email Address
                            .form__input= `${user.email}`

